Q	the reliable idiom of write()
	
	/* int rwrite(int fd, void *buf, int n) */
A	int rwrite(int fd, void *buf, int n)
	{
		int left;
		char *bufp;
		int nw;
	
		left = n, bufp = buf;
		while (left > 0) {
			if ((nw = write(fd, bufp, left)) == -1) {
				if (errno == EINTR)
					nw = 0;
				else
					return -1;
			}
			left -= nw, bufp += nw;
		}
		return n
	}
